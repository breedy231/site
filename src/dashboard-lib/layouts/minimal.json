{
  "name": "Minimal Layout",
  "description": "Clean, minimalist design focusing on time",
  "grid": {
    "rows": 8,
    "cols": 6,
    "margin": 40,
    "gap": 15
  },
  "components": [
    {
      "type": "clock",
      "position": { "row": 2, "col": 0, "rowSpan": 3, "colSpan": 6 },
      "config": {
        "fontSize": 96,
        "showSeconds": false,
        "format": "HH:mm",
        "fontWeight": "300"
      }
    },
    {
      "type": "date",
      "position": { "row": 5, "col": 0, "rowSpan": 2, "colSpan": 6 },
      "config": {
        "fontSize": 20,
        "showDayOfYear": false,
        "dayFormat": "EEEE",
        "dateFormat": "MMMM do, yyyy",
        "fontWeight": "300"
      }
    }
  ]
}