{
  "name": "Weather Dashboard Layout",
  "description": "Dashboard layout focused on weather information and forecasting",
  "grid": {
    "rows": 12,
    "cols": 8,
    "margin": 15,
    "gap": 8
  },
  "components": [
    {
      "type": "title",
      "position": { "row": 0, "col": 1, "colSpan": 6 },
      "config": {
        "text": "WEATHER DASHBOARD",
        "fontSize": 28,
        "fontWeight": "bold"
      }
    },
    {
      "type": "clock",
      "position": { "row": 1, "col": 0, "rowSpan": 2, "colSpan": 4 },
      "config": {
        "fontSize": 42,
        "showSeconds": false,
        "format": "h:mm a"
      }
    },
    {
      "type": "date",
      "position": { "row": 1, "col": 4, "rowSpan": 2, "colSpan": 4 },
      "config": {
        "fontSize": 16,
        "showDayOfYear": false,
        "dayFormat": "EEEE",
        "dateFormat": "MMM do, yyyy"
      }
    },
    {
      "type": "weather",
      "position": { "row": 3, "col": 0, "rowSpan": 6, "colSpan": 8 },
      "config": {
        "title": "CURRENT WEATHER",
        "fontSize": 18,
        "titleSize": 1.4,
        "showCurrent": true,
        "showForecast": true,
        "showWind": true,
        "showHumidity": true,
        "forecastDays": 3
      }
    },
    {
      "type": "device-stats",
      "position": { "row": 9, "col": 0, "rowSpan": 3, "colSpan": 4 },
      "config": {
        "title": "DEVICE",
        "fontSize": 14,
        "titleSize": 1.2,
        "showBattery": true,
        "showTemperature": false,
        "showWifi": true,
        "showMemory": false,
        "showUptime": false,
        "showLastUpdate": true
      }
    },
    {
      "type": "stats",
      "position": { "row": 9, "col": 4, "rowSpan": 3, "colSpan": 4 },
      "config": {
        "title": "SYSTEM",
        "fontSize": 14,
        "titleSize": 1.2,
        "showGenerated": true,
        "showTimezone": false,
        "showResolution": false,
        "customStats": [
          "Weather: Open-Meteo API",
          "Format: Grayscale PNG"
        ]
      }
    }
  ]
}