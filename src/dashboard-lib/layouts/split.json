{
  "name": "Split Layout",
  "description": "Two-column layout with distinct sections",
  "grid": {
    "rows": 12,
    "cols": 10,
    "margin": 12,
    "gap": 6
  },
  "components": [
    {
      "type": "title",
      "position": { "row": 0, "col": 2, "colSpan": 6 },
      "config": {
        "text": "DASHBOARD",
        "fontSize": 24,
        "fontWeight": "bold"
      }
    },
    {
      "type": "clock",
      "position": { "row": 1, "col": 0, "rowSpan": 4, "colSpan": 5 },
      "config": {
        "fontSize": 56,
        "showSeconds": true,
        "secondsSize": 0.4,
        "format": "HH:mm",
        "borderColor": "#000000",
        "borderWidth": 2,
        "padding": 10
      }
    },
    {
      "type": "date",
      "position": { "row": 1, "col": 5, "rowSpan": 4, "colSpan": 5 },
      "config": {
        "fontSize": 18,
        "showDayOfYear": true,
        "dayFormat": "EEEE",
        "dateFormat": "MMM do, yyyy",
        "borderColor": "#000000",
        "borderWidth": 2,
        "padding": 10
      }
    },
    {
      "type": "stats",
      "position": { "row": 6, "col": 0, "rowSpan": 5, "colSpan": 10 },
      "config": {
        "title": "SYSTEM INFORMATION",
        "fontSize": 16,
        "titleSize": 1.3,
        "showGenerated": true,
        "showTimezone": true,
        "showResolution": true,
        "borderColor": "#000000",
        "borderWidth": 2,
        "padding": 10,
        "customStats": [
          "Layout: Split Design",
          "Mode: Production",
          "Status: Active"
        ]
      }
    }
  ]
}