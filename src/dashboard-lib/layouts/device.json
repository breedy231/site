{
  "name": "Device Status Layout",
  "description": "Dashboard layout focused on device statistics and monitoring",
  "grid": {
    "rows": 12,
    "cols": 8,
    "margin": 15,
    "gap": 8
  },
  "components": [
    {
      "type": "title",
      "position": { "row": 0, "col": 1, "colSpan": 6 },
      "config": {
        "text": "KINDLE DASHBOARD",
        "fontSize": 28,
        "fontWeight": "bold"
      }
    },
    {
      "type": "clock",
      "position": { "row": 1, "col": 0, "rowSpan": 2, "colSpan": 4 },
      "config": {
        "fontSize": 48,
        "showSeconds": true,
        "secondsSize": 0.5,
        "format": "HH:mm"
      }
    },
    {
      "type": "date",
      "position": { "row": 1, "col": 4, "rowSpan": 2, "colSpan": 4 },
      "config": {
        "fontSize": 18,
        "showDayOfYear": false,
        "dayFormat": "EEEE",
        "dateFormat": "MMM do, yyyy"
      }
    },
    {
      "type": "device-stats",
      "position": { "row": 3, "col": 0, "rowSpan": 5, "colSpan": 4 },
      "config": {
        "title": "DEVICE STATUS",
        "fontSize": 16,
        "titleSize": 1.4,
        "showBattery": true,
        "showTemperature": true,
        "showWifi": true,
        "showMemory": true,
        "showUptime": true,
        "showLastUpdate": true
      }
    },
    {
      "type": "stats",
      "position": { "row": 3, "col": 4, "rowSpan": 5, "colSpan": 4 },
      "config": {
        "title": "SYSTEM INFO",
        "fontSize": 16,
        "titleSize": 1.4,
        "showGenerated": true,
        "showTimezone": true,
        "showResolution": true,
        "customStats": [
          "E-ink optimized",
          "Portrait: 600x800px",
          "Format: Grayscale PNG"
        ]
      }
    }
  ]
}